[Unit]
Description=Central heating of the colony

[Service]
ExecStart=/usr/bin/screen -d -m /usr/bin/python /opt/python-calefaccio/calefacciod.py
Type=forking
PIDFile=/var/run/calefacciod.pid
Restart=always
User=root
Group=root
PermissionsStartOnly=false
PrivateTmp=no

[Install]
WantedBy=multi-user.target
